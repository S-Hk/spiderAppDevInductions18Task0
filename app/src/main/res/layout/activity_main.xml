<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackgroundBlue"
    android:id="@+id/screenActivity"
    tools:context="com.spider.inductions18.task0try1.MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/labelTargetAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="31dp"
            android:layout_marginTop="31dp"
            android:background="@color/BackgroundBlue"
            android:text="@string/amountTarget_textView"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/labelCurrentAmountAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/labelTargetAmount"
            android:layout_marginTop="113dp"
            android:background="@color/BackgroundBlue"
            android:text="@string/currentAmount_textView"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textViewTarget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/labelTargetAmount"
            android:layout_toEndOf="@+id/labelTargetAmount"
            android:background="@color/BackgroundBlue"
            android:text="@string/initialNull00"
            android:textColor="#FFFF00"
            android:textSize="25sp" />


        <TextView
            android:id="@+id/textViewCurrent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/labelCurrentAmountAmount"
            android:layout_toEndOf="@+id/labelCurrentAmountAmount"
            android:background="@color/BackgroundBlue"
            android:text="@string/initialNull00"
            android:textColor="#FFFF00"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="92dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/buttonReset"
            android:layout_marginBottom="115dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonR1"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@android:color/holo_orange_light"
                android:text="Rs. 1" />

            <Button
                android:id="@+id/buttonR2"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@android:color/holo_orange_light"
                android:text="Rs. 2" />

            <Button
                android:id="@+id/buttonR5"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@android:color/holo_orange_light"
                android:text="Rs. 5" />

            <Button
                android:id="@+id/buttonR10"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@android:color/holo_orange_light"
                android:text="Rs. 10" />
        </LinearLayout>


        <Button
            android:id="@+id/buttonReset"
            android:layout_width="336dp"
            android:layout_height="58dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="18dp"
            android:background="#860000"
            android:text="@string/resetButtonText"
            android:textColor="#ffef95" />


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
